<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    {{ form_start(form) }}
    	<div class="form-group">
    		{{ form_row(form.username, { attr: { class: "form-control", placeholder: "Username" } }) }}
    	</div>
    	<div class="form-group">
    		{{ form_row(form.email, { attr: { class: "form-control", placeholder: "Email" } }) }}
    	</div>
    	<div class="form-group">
    		{{ form_row(form.plainPassword.first, { attr: { class: "form-control", placeholder: "Password" } }) }}
    	</div>
    	<div class="form-group">
    		{{ form_row(form.plainPassword.second, { attr: { class: "form-control", placeholder: "Repeat password" } }) }}
    	</div>
    {{ form_end(form) }}
    <div>
        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary pull-right" style="margin-bottom:15px;"/>
    </div>
</form>