{% extends "::base.html.twig" %}

{% block title %} webegin {% endblock %}

{% block stylesheets %} {% endblock %}

{% block javascripts %} {% endblock %}

{% block body %} 

<!-- body -->
<div class="container">
	<div class="row">
		<div class="col-md-4">
		
		</div>
		<div class="col-md-4" style="margin-top:20px;background-color:white">
			<h3 class="text-center">Login</h3>
			<hr>
			{% block fos_user_content %}
			{% if error %}
			    <p class="text-left text-danger">{{ error|trans({}, 'FOSUserBundle') }}</p>
			{% endif %}
			
			<form action="{{ path("fos_user_security_check") }}" method="post">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
				<div class="form-group">
					<label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
				    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="Username" />
				</div>
			    <div class="form-group">
			    	<label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
			    	<input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Password" />
			    </div>
				<div class="form-group" style="display:none">
					<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
			    	<label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
				</div>
			    <p class="text-left pull-left" style="margin-top:10px;">
	    			<a href="{{ path('webegin_homepage') }}" ><i class="fa fa-long-arrow-left"></i> Back</a>
	    		</p>
			    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary pull-right" style="margin-bottom:15px;" />
			</form>
			{% endblock fos_user_content %}
		</div>
		<div class="col-md-4">
		
		</div>
	</div>
</div>
	

{% endblock %}